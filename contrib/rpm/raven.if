########################################
## <summary>
##	All of the rules required to administrate
##	a ftm environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`ftm_admin',`
	gen_require(`
		type ftm_t;
		type ftm_initrc_exec_t;
		type ftm_var_lib_t;
	')

	allow $1 ftm_t:process { ptrace signal_perms };
	ps_process_pattern($1, ftm_t)

	ftm_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 ftm_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, ftm_var_lib_t)

')


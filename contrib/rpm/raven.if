
## <summary>policy for ftm</summary>


########################################
## <summary>
##	Transition to ftm.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`ftm_domtrans',`
	gen_require(`
		type ftm_t, ftm_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, ftm_exec_t, ftm_t)
')


########################################
## <summary>
##	Execute ftm server in the ftm domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ftm_initrc_domtrans',`
	gen_require(`
		type ftm_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, ftm_initrc_exec_t)
')


########################################
## <summary>
##	Search ftm lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ftm_search_lib',`
	gen_require(`
		type ftm_var_lib_t;
	')

	allow $1 ftm_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read ftm lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ftm_read_lib_files',`
	gen_require(`
		type ftm_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, ftm_var_lib_t, ftm_var_lib_t)
')

########################################
